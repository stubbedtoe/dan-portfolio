---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import { SITE } from '../config';
import portfolio from '../content/portfolio.json';
import content from '../content/homepage.json';
import type { ImageMetadata } from 'astro';

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let { title } = SITE;
let description = '';
let permalink = 'https://dan-portfolio.netlify.com/';
const images = import.meta.glob<{ default: ImageMetadata }>('/src/images/*');

// Data Fetching: List all Markdown posts in the repo.

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="en">
    <head>
        <BaseHead {title} {description} {permalink} />

        <style>
            header {
                width: 100%;
                height: 100%;
                background-color: var(--theme-bg-offset);
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .content {
                margin-top: 4rem;
                margin-bottom: 8rem;
            }

            .content :global(main > * + *) {
                margin-top: 1rem;
            }

            .intro {
                padding-bottom: 4rem;
                margin-bottom: 2rem;
                border-bottom: 4px solid var(--theme-divider);
            }

            .intro > * {
                margin: 0;
            }

            .latest {
                font-size: 2.5rem;
                font-weight: 700;
            }

            footer {
                text-align: center;
            }
        </style>
    </head>

    <body>
        <BlogHeader />
        <div class="wrapper">
            <main class="content">
                <section>
                    <p>{content.intro}</p>
                </section>
                <ul>
                    {
                        portfolio.map((painting) =>
                            !images[`${painting.image}`] ? (
                                console.error(`"${painting.image}" does not exist in glob: "/src/images/*"`)
                            ) : (
                                <li>
                                    <a href={`/portfolio/${painting.id}`}>{painting.title}</a>
                                </li>
                            )
                        )
                    }
                </ul>
            </main>
            <footer>
                <ul>
                    {
                        content.socials.map((social) => (
                            <li>
                                <a href={social.url} target="_blank" rel="nofollow noreferrer">
                                    {social.website}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </footer>
        </div>
    </body>
</html>
