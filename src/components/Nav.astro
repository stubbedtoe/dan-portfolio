---
import { SITE } from '../config';

interface Props {
    routes: {
        title: string;
        path: string;
    }[];
    classes?: string;
    currentTitle?: string;
}

const { classes = '', currentTitle = '', routes } = Astro.props;
const active = (title: string) => currentTitle.startsWith(title);
---

<header
    class={`${classes} font-medium sticky top-0 backdrop-blur-sm flex justify-between w-full pb-8 pt-5 border-b-1 border-gray-500 bg-white/70 z-1`}
>
    <h1><a href="/">{SITE.title}</a></h1>
    <nav>
        <ul class="flex gap-3">
            {
                routes.map(({ title, path }) => (
                    <li
                        class={
                            active(title)
                                ? 'text-amber-900 shadow-[0px_1px_0px_0px_var(--color-amber-900)] shadow-amber-900'
                                : ''
                        }
                    >
                        <a href={path}>{title}</a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>
